<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GolfCourseApp"
             x:Class="GolfCourseApp.LoginPage"
             Title="Login Page"
             Shell.BackgroundColor="Green"> 

    <StackLayout Padding="20">
        <Entry x:Name="UsernameEntry" Placeholder="Username" Text="{Binding Username}" Margin="10,20,10,0"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Text="{Binding Password}" Margin="10,10,10,0"/>
        <Button Text="Login" Command="{Binding LoginCommand}" Margin="10,10,10,0" CornerRadius="10" BackgroundColor="DodgerBlue"/>
        <Button Text="Register" Command="{Binding NavigateToRegistrationCommand}" Margin="10,10,10,0" CornerRadius="10" BackgroundColor="DodgerBlue"/>
        <Image Source="logo.png" WidthRequest="500" HeightRequest="500" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

    </StackLayout>

</ContentPage>

