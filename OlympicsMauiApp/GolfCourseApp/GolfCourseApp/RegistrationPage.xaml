<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GolfCourseApp"
             x:Class="GolfCourseApp.RegistrationPage">
    <StackLayout Padding="20">
        <Entry x:Name="UsernameEntry" Placeholder="Username" Text="{Binding Username}" Margin="0,10,0,0"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Text="{Binding Password}" Margin="0,10,0,10"/>
        <Button Text="Register" Command="{Binding RegisterCommand}" />
        <Image Source="logo.png" WidthRequest="500" HeightRequest="500" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
